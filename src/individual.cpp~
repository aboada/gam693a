//#include "chromosome.h"
#include <math.h>
#include<float.h>
#include "individual.h"


typedef unsigned int uint32;

Individual::Individual(uint32 b)
{
	this->fitness = DBL_MAX;
	this->bitarray.chrome = b;		
}	

Individual::Individual()
{
	this->fitness = DBL_MAX;
	this->bitarray.var.X = 0;
	this->bitarray.var.Y = 0;	
}
		
void Individual :: compFitness()
{
	double a,b;
	a = this->bitarray.var.X;
	b = this->bitarray.var.Y;
	this->fitness = 100*(pow((b-pow(a,2)),2)) + (pow((1 - a),2));

}

double Individual :: getFitness()
{
	return this->fitness;
}
	
void Individual :: setChrome(chroma ch)
{
	this->bitarray = ch;
}
	
void Individual :: setChrome(uint32 b)
{
	this->bitarray.chrome = b;
}

chroma Individual :: getChrome()
{
	return this->bitarray;
}




